<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content_udacity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/containerUdacity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!--Floating Action Button for giving link to happy_learning activity-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabNextUdacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/next"
        app:backgroundTint="#80757575" />

    <!--Floating Action Button for giving link to project activity-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabPreviousUdacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|left"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/previous"
        app:backgroundTint="#80757575" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <!--TextView for displaying the title of the activity-->
            <TextView
                android:id="@+id/HeaderUdacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/header_text_page5"
                android:textAlignment="gravity"
                android:textSize="40sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ImageUdacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HeaderUdacity"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:padding="16dp"
                android:src="@drawable/android_udacity" />

            <!--TextView for displaying the content of the activity-->
            <TextView
                android:id="@+id/TextUdacity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ImageUdacity"
                android:layout_marginTop="20dp"
                android:padding="16dp"
                android:text="@string/page5_text"
                android:textSize="22sp" />


        </RelativeLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
